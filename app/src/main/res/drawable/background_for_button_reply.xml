<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FF1E90FF" />

            <stroke android:width="1dp" android:color="#80808080" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />

            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FFEEEEEE" />

            <stroke android:width="1dp" android:color="#80808080" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>